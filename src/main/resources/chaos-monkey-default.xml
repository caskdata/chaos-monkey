<configuration>
  <property>
    <name>clusterId</name>
    <value>00000001</value>
  </property>

  <property>
    <name>hbase-regionserver.pidPath</name>
    <value>/var/run/hbase/hbase-hbase-regionserver.pid</value>
  </property>
  <property>
    <name>hbase-regionserver.interval</name>
    <value>3</value>
  </property>
  <property>
    <name>hbase-regionserver.killProbability</name>
    <value>0</value>
  </property>
  <property>
    <name>hbase-regionserver.stopProbability</name>
    <value>0</value>
  </property>
  <property>
    <name>hbase-regionserver.restartProbability</name>
    <value>0</value>
  </property>

  <property>
    <name>hbase-master.pidPath</name>
    <value>/var/run/hbase/hbase-hbase-master.pid</value>
  </property>
  <property>
    <name>hbase-master.interval</name>
    <value>3</value>
  </property>
  <property>
    <name>hbase-master.killProbability</name>
    <value>0</value>
  </property>
  <property>
    <name>hbase-master.stopProbability</name>
    <value>0</value>
  </property>
  <property>
    <name>hbase-master.restartProbability</name>
    <value>0</value>
  </property>

  <property>
    <name>coopr.userId</name>
    <value>admin</value>
  </property>
  <property>
    <name>coopr.tenantId</name>
    <value>superadmin</value>
  </property>

  <property>
    <name>coopr.server.uri</name>
    <value>http://localhost:55054</value>
  </property>
  <property>
    <name>coopr.api.version</name>
    <value>v2</value>
  </property>
</configuration>
